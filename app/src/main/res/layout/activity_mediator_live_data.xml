<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".livedatatest.MediatorLiveDataActivity">

    <Button
            android:text="ButtonA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonA" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonB"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.592"/>
    <Button
            android:text="ButtonB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextViewA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewA" android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonA" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp"/>
    <TextView
            android:text="TextViewB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewB" app:layout_constraintStart_toEndOf="@+id/textViewA"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp" android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonB"/>
</androidx.constraintlayout.widget.ConstraintLayout>